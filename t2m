#!/bin/bash

# ABOUT
#
# fitsumbelay@gmail.com
# created : 19 April 2011
# updated : 20 April 2011


# DEPENDENCIES
#
# UNIX - bash, lame
# OS X - say


# TODO
# 
# make shell agnostic


# VARS
_tn=tmpFile.aiff
_dn=`dirname "$1"`
_fn=`basename "$1"`
_ext=".txt"
_fn=${_fn:0:$((${#_fn}-${#_ext}))}


# MAIN DIRECTIVES
say -o $_dn/$_tn -f $1
lame --silent $_dn/$_tn $_dn/$_fn.mp3


#CLEAN UP DIRECTIVE
rm $_dn/$_tn 


